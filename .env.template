# Blaze Sports Intel - Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to git (already in .gitignore)

# ============================================================================
# REQUIRED: Primary Data Sources
# ============================================================================

# Highlightly Pro API (Primary pipeline - baseball & football)
# Get from: https://rapidapi.com/highlightly/api/highlightly-pro
HIGHLIGHTLY_API_KEY=your_highlightly_api_key_here

# SportsDataIO API (NFL, NBA, MLB, CFB, CBB, Golf, GRid)
# Get from: https://sportsdata.io
SPORTSDATAIO_API_KEY=your_sportsdataio_api_key_here

# ============================================================================
# Cloudflare (Required for Workers & Deployment)
# ============================================================================

CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here

# R2 Storage (optional, for media/archives)
R2_ACCESS_KEY_ID=your_r2_access_key_id_here
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key_here

# D1 Database (optional, usually managed via wrangler.toml)
D1_DATABASE_ID=your_d1_database_id_here

# ============================================================================
# Application Settings
# ============================================================================

# Base URL (defaults shown)
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8787

# Timezone (BSI default: America/Chicago)
TZ=America/Chicago

# ============================================================================
# Feature Flags
# ============================================================================

ENABLE_HAV_F=true
ENABLE_ADVANCED_METRICS=true
ENABLE_VISION_AI=true

# ============================================================================
# Sport-Specific Settings
# ============================================================================

# MLB
MLB_SEASON=2025
MLB_RATE_LIMIT=1000

# College Baseball
CBB_SEASON=2025

# ============================================================================
# Optional: Third-Party Integrations
# ============================================================================

# Stripe (payments - optional)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=whsec_...   # From Stripe Dashboard â†’ Webhooks

# Resend (for API key delivery emails - optional)
RESEND_API_KEY=re_...             # From resend.com

# Analytics (optional)
NEXT_PUBLIC_GA_ID=
PLAUSIBLE_DOMAIN=

# ============================================================================
# Development Only
# ============================================================================

# Set to 'development' locally, 'production' in Cloudflare
NODE_ENV=development

# Enable debug logging
DEBUG=false
LOG_LEVEL=info
