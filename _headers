# ==================== ENTERPRISE-GRADE SECURITY HEADERS ====================

/*
  # Security Headers - Maximum Protection
  Strict-Transport-Security: max-age=63072000; includeSubDomains; preload
  X-Frame-Options: SAMEORIGIN
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=(), payment=(), usb=(), autoplay=(self), encrypted-media=(self), fullscreen=(self)

  # Content Security Policy - Comprehensive Protection
  Content-Security-Policy: default-src 'self' https:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdnjs.cloudflare.com https://unpkg.com https://cdn.jsdelivr.net https://www.googletagmanager.com https://www.google-analytics.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com; font-src 'self' https://fonts.gstatic.com https://cdnjs.cloudflare.com; img-src 'self' data: https: blob:; media-src 'self' https: blob:; connect-src 'self' https: wss: ws:; frame-src 'self' https://www.youtube.com https://player.vimeo.com; object-src 'none'; base-uri 'self'; form-action 'self' https:; frame-ancestors 'self'; upgrade-insecure-requests; block-all-mixed-content

  # CORS Headers - Controlled Access
  Access-Control-Allow-Origin: https://blazesportsintel.com
  Access-Control-Allow-Methods: GET, POST, OPTIONS, HEAD
  Access-Control-Allow-Headers: Content-Type, Authorization, X-Requested-With, Accept, Origin, Cache-Control
  Access-Control-Allow-Credentials: true
  Access-Control-Max-Age: 86400

  # Performance & Caching Headers
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept-Encoding, Accept

  # Additional Security
  Server: Blaze-Intelligence-CDN/1.0
  X-Robots-Tag: index, follow

# ==================== ASSET-SPECIFIC OPTIMIZATIONS ====================

# JavaScript Files - Aggressive Caching with Integrity
/*.js
  Content-Type: application/javascript; charset=utf-8
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff
  Access-Control-Allow-Origin: https://blazesportsintel.com
  Vary: Accept-Encoding
  Cross-Origin-Resource-Policy: cross-origin

# CSS Files - Long-term Caching
