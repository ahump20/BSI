{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "types": ["@cloudflare/workers-types"],
    "lib": ["ES2022"],
    "outDir": "./dist/workers",
    "rootDir": "./workers",
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "isolatedModules": true,
    "noEmitOnError": false
  },
  "include": [
    "workers/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
