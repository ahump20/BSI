{
  "name": "bsi-game-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Cloudflare Worker backend for Diamond Sluggers mobile baseball game",
  "main": "index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:production": "wrangler deploy --env production",
    "db:create": "wrangler d1 create bsi-game-db",
    "db:init": "wrangler d1 execute bsi-game-db --file=schema.sql",
    "db:init:remote": "wrangler d1 execute bsi-game-db --remote --file=schema.sql",
    "r2:create": "wrangler r2 bucket create bsi-game-assets",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250303.0",
    "typescript": "^5.7.3",
    "wrangler": "^4.15.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
