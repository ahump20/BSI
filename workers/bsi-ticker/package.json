{
  "name": "bsi-ticker",
  "version": "1.0.0",
  "description": "BSI Live Sports Ticker - Real-time breaking news and scores via WebSocket",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "tail": "wrangler tail",
    "types": "wrangler types",
    "db:create": "wrangler d1 create bsi-ticker-db",
    "db:migrate": "wrangler d1 execute bsi-ticker-db --file=./schema.sql",
    "kv:create": "wrangler kv:namespace create BSI_TICKER_CACHE",
    "queue:create": "wrangler queues create bsi-ticker-events",
    "queue:dlq": "wrangler queues create bsi-ticker-dlq",
    "secret:set": "wrangler secret put API_SECRET"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "typescript": "^5.3.3",
    "wrangler": "^3.91.0"
  }
}
