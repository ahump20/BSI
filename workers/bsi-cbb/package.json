{
  "name": "bsi-cbb",
  "version": "1.0.0",
  "description": "BSI College Baseball + NIL Intelligence Workers",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:gateway": "wrangler dev --config gateway/wrangler.toml",
    "dev:sync": "wrangler dev --config sync/wrangler.toml",
    "deploy:gateway": "wrangler deploy --config gateway/wrangler.toml",
    "deploy:sync": "wrangler deploy --config sync/wrangler.toml",
    "deploy": "npm run deploy:gateway && npm run deploy:sync",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ."
  },
  "dependencies": {
    "hono": "^4.6.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250102.0",
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0",
    "wrangler": "^4.59.2"
  }
}