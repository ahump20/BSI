{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "types": ["@cloudflare/workers-types"],
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["*.ts", "src/**/*.ts", "../lib/api-clients/**/*.ts", "../lib/adapters/**/*.ts", "../lib/sportsdata/**/*.ts"],
  "exclude": ["node_modules"]
}
