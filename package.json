{
  "name": "college-baseball-tracker",
  "version": "1.0.0",
  "type": "module",
  "description": "Mobile-first college baseball live tracker with full box scores",
  "scripts": {
    "dev": "next dev",
    "dev:vite": "vite",
    "build:lib": "tsc",
    "build:functions": "tsc -p tsconfig.functions.json && npm run copy:lib",
    "copy:lib": "cp -r lib dist/",
    "copy:web-vitals": "cp node_modules/web-vitals/dist/web-vitals.attribution.js public/js/web-vitals.min.js",
    "copy:functions": "cp -r functions out/functions",
    "build": "next build && npm run copy:functions",
    "build:vite": "npm run copy:web-vitals && vite build && npm run build:functions",
    "preview": "vite preview",
    "deploy": "npm run build && wrangler pages deploy out --project-name blazesportsintel --branch main",
    "deploy:production": "npm run build && wrangler pages deploy out --project-name blazesportsintel --branch main --commit-dirty=true",
    "deploy:preview": "npm run build && wrangler pages deploy out --project-name blazesportsintel --branch preview",
    "deploy:worker": "wrangler deploy --config workers/wrangler.toml --env production",
    "deploy:worker:production": "wrangler deploy --config workers/wrangler.toml --env production",
    "deploy:hybrid": "npm run deploy:production && npm run deploy:worker:production",
    "dev:worker": "wrangler dev --config workers/wrangler.toml",
    "dev:hybrid": "npm run dev & npm run dev:worker",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:api": "vitest run tests/api",
    "test:integration": "vitest run tests/integration",
    "test:validation": "vitest run tests/validation",
    "test:all": "npm run test:api && npm run test:integration && npm run test:validation",
    "test:routes": "playwright test tests/routes/",
    "test:a11y": "playwright test --config=playwright.config.ts",
    "test:a11y:ui": "playwright test --config=playwright.config.ts --ui",
    "test:a11y:report": "playwright show-report",
    "typecheck": "tsc --noEmit",
    "lint": "eslint app functions lib components --ext .js,.jsx,.ts,.tsx --ignore-pattern 'node_modules/**'",
    "lint:fix": "eslint app functions lib components --ext .js,.jsx,.ts,.tsx --fix --ignore-pattern 'node_modules/**'",
    "format": "prettier --check \"app/**/*.{js,jsx,ts,tsx,json,css,md}\" \"functions/**/*.{js,jsx,ts,tsx,json,css,md}\" \"lib/**/*.{js,jsx,ts,tsx,json,css,md}\" \"hooks/**/*.{js,jsx,ts,tsx,json,css,md}\" \"components/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:fix": "prettier --write \"app/**/*.{js,jsx,ts,tsx,json,css,md}\" \"functions/**/*.{js,jsx,ts,tsx,json,css,md}\" \"lib/**/*.{js,jsx,ts,tsx,json,css,md}\" \"hooks/**/*.{js,jsx,ts,tsx,json,css,md}\" \"components/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "perf:check": "node scripts/performance-check.ts",
    "data:freshness": "node scripts/check-data-freshness.js",
    "cache:warm": "node scripts/warm-cache.js",
    "prepare": "husky install",
    "db:migrate:production": "wrangler d1 execute blazesports-historical --remote --file=schema/003_migration_drop_and_recreate.sql",
    "db:seed:production": "wrangler d1 execute blazesports-historical --remote --file=scripts/insert-test-teams-fixed.sql",
    "build:arcade": "cd games/blitz && npm run build && cd ../hotdog-dash && npm run build && cd ../.. && npm run arcade:copy",
    "arcade:copy": "echo 'Games are self-hosted in public/games/ -- no copy needed'",
    "deploy:arcade": "echo 'Games deploy with Pages -- use deploy:pages'",
    "deploy:arcade-api": "wrangler deploy --config workers/mini-games-api/wrangler.toml",
    "deploy:safe": "bash scripts/pre-deploy-check.sh && wrangler pages deploy out --project-name blazesportsintel --branch main --commit-dirty=true",
    "deploy:all": "npm run deploy:safe && npm run deploy:worker:production"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@stripe/react-stripe-js": "^3.10.0",
    "@stripe/stripe-js": "^5.10.0",
    "@tanstack/react-query": "^5.90.20",
    "clsx": "^2.1.1",
    "dependencies": "^0.0.1",
    "fantasydata-node-client": "^1.8.2",
    "framer-motion": "^12.29.2",
    "fuse.js": "^7.1.0",
    "lucide-react": "^0.546.0",
    "luxon": "^3.7.2",
    "pnpm": "^10.28.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-is": "^19.2.4",
    "recharts": "^3.7.0",
    "tailwind-merge": "^3.4.0",
    "updates": "^17.1.0",
    "web-vitals": "^4.2.4",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@cloudflare/workers-types": "^4.20260131.0",
    "@playwright/test": "^1.58.1",
    "@prisma/client": "^6.19.2",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24.10.9",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "autoprefixer": "^10.4.24",
    "axe-core": "^4.11.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^8.0.3",
    "jsdom": "^24.1.3",
    "next": "^16.1.6",
    "playwright": "^1.58.1",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "prisma": "^6.19.2",
    "sharp": "^0.34.5",
    "sucrase": "^3.35.1",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "wrangler": "^4.61.1"
  },
  "optionalDependencies": {
    "@cloudflare/workerd-darwin-arm64": "^1.20260131.0"
  },
  "pnpm": {
    "overrides": {
      "esbuild": ">=0.25.0"
    }
  }
}
