{
  "name": "blaze-sports-intel",
  "version": "0.0.1",
  "description": "Professional sports statistics and intelligence platform",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint src scripts --ext .js,.jsx,.ts,.tsx --ignore-path .gitignore",
    "test": "jest --passWithNoTests",
    "deploy:pages": "wrangler pages deploy dist --project-name=blazesportsintel",
    "worker:dev": "wrangler dev src/workers/api.js",
    "worker:deploy": "wrangler deploy src/workers/api.js",
    "db:migrate": "wrangler d1 execute blaze-sports-db --file=schema.sql",
    "check:types": "tsc --noEmit",
    "check:repo": "node ./scripts/repo-sanity.js"
  },
  "dependencies": {
    "@cloudflare/workers-types": "4.20240925.0",
    "hono": "4.5.0",
    "next": "14.2.0",
    "react": "18.3.0",
    "react-dom": "18.3.0",
    "zod": "3.23.0",
    "zustand": "4.5.0"
  },
  "devDependencies": {
    "@types/node": "20.14.0",
    "@types/react": "18.3.0",
    "@types/react-dom": "18.3.0",
    "autoprefixer": "10.4.19",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.0",
    "jest": "29.7.0",
    "postcss": "8.4.38",
    "tailwindcss": "3.4.0",
    "typescript": "5.5.4",
    "wrangler": "3.72.0"
  }
}
