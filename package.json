{
  "name": "college-baseball-tracker",
  "version": "1.0.0",
  "type": "module",
  "description": "Mobile-first college baseball live tracker with full box scores",
  "scripts": {
    "dev": "next dev",
    "dev:vite": "vite",
    "build:lib": "tsc",
    "build:functions": "tsc -p tsconfig.functions.json && npm run copy:lib",
    "copy:lib": "cp -r lib dist/",
    "copy:web-vitals": "cp node_modules/web-vitals/dist/web-vitals.attribution.js public/js/web-vitals.min.js",
    "build": "next build && npm run build:functions",
    "build:vite": "npm run copy:web-vitals && vite build && npm run build:functions",
    "preview": "vite preview",
    "deploy": "npm run build && wrangler pages deploy out --project-name blazesportsintel --branch main",
    "deploy:production": "npm run build && wrangler pages deploy out --project-name blazesportsintel --branch main --commit-dirty=true",
    "deploy:preview": "npm run build && wrangler pages deploy out --project-name blazesportsintel --branch preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:api": "vitest run tests/api",
    "test:integration": "vitest run tests/integration",
    "test:validation": "vitest run tests/validation",
    "test:all": "npm run test:api && npm run test:integration && npm run test:validation",
    "test:a11y": "playwright test --config=playwright.config.ts",
    "test:a11y:ui": "playwright test --config=playwright.config.ts --ui",
    "test:a11y:report": "playwright show-report",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src app functions lib hooks components --ext .js,.jsx,.ts,.tsx --ignore-pattern 'node_modules/**'",
    "lint:fix": "eslint src app functions lib hooks components --ext .js,.jsx,.ts,.tsx --fix --ignore-pattern 'node_modules/**'",
    "format": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\" \"app/**/*.{js,jsx,ts,tsx,json,css,md}\" \"functions/**/*.{js,jsx,ts,tsx,json,css,md}\" \"lib/**/*.{js,jsx,ts,tsx,json,css,md}\" \"hooks/**/*.{js,jsx,ts,tsx,json,css,md}\" \"components/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:fix": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\" \"app/**/*.{js,jsx,ts,tsx,json,css,md}\" \"functions/**/*.{js,jsx,ts,tsx,json,css,md}\" \"lib/**/*.{js,jsx,ts,tsx,json,css,md}\" \"hooks/**/*.{js,jsx,ts,tsx,json,css,md}\" \"components/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "perf:check": "node scripts/performance-check.ts",
    "data:freshness": "node scripts/check-data-freshness.js",
    "cache:warm": "node scripts/warm-cache.js",
    "prepare": "husky install",
    "db:migrate:production": "wrangler d1 execute blazesports-historical --remote --file=schema/003_migration_drop_and_recreate.sql",
    "db:seed:production": "wrangler d1 execute blazesports-historical --remote --file=scripts/insert-test-teams-fixed.sql"
  },
  "dependencies": {
    "@amplitude/analytics-browser": "^2.31.3",
    "@amplitude/plugin-session-replay-browser": "^1.23.6",
    "@aws-sdk/client-s3": "^3.714.0",
    "@sentry/node": "^10.27.0",
    "@tanstack/react-query": "^5.90.10",
    "framer-motion": "^12.23.24",
    "fuse.js": "^7.1.0",
    "lucide-react": "^0.546.0",
    "luxon": "^3.4.4",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "recharts": "^3.5.1",
    "web-vitals": "^4.2.4",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@cloudflare/workers-types": "^4.20251128.0",
    "@playwright/test": "^1.56.1",
    "@prisma/client": "^6.18.0",
    "@types/luxon": "^3.4.2",
    "@types/node": "^24.9.1",
    "@types/pg": "^8.10.9",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^4.0.1",
    "@vitest/ui": "^4.0.1",
    "autoprefixer": "^10.4.22",
    "axe-core": "^4.10.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.0",
    "jsdom": "^27.3.0",
    "next": "^16.0.10",
    "playwright": "^1.48.2",
    "postcss": "^8.5.6",
    "prettier": "^3.2.5",
    "prisma": "^6.18.0",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.2",
    "vite": "^7.1.11",
    "vitest": "^4.0.1",
    "wrangler": "^4.51.0"
  },
  "optionalDependencies": {
    "@cloudflare/workerd-darwin-arm64": "^1.20251128.0"
  },
  "pnpm": {
    "overrides": {
      "esbuild": ">=0.25.0"
    }
  }
}
