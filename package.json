{
  "name": "college-baseball-tracker",
  "version": "1.0.0",
  "type": "module",
  "description": "Mobile-first college baseball live tracker with full box scores",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "npm run build && wrangler pages deploy dist",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --project tsconfig.app.json",
    "test:playwright": "playwright test",
    "test:a11y": "playwright test tests/accessibility --project=chromium",
    "ci:verify": "npm run lint && npm run typecheck && npm run test:playwright",
    "ci:lighthouse": "lhci autorun"
  },
  "dependencies": {
    "@sentry/node": "^10.20.0",
    "@sentry/react": "^8.39.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "web-vitals": "^4.2.3"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.0",
    "@lhci/cli": "^0.13.0",
    "@playwright/test": "^1.49.1",
    "@sentry/vite-plugin": "^2.17.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitejs/plugin-react": "^4.7.0",
    "eslint": "^9.17.0",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "globals": "^16.4.0",
    "typescript": "^5.7.3",
    "vite": "^7.1.10",
    "wrangler": "^3.22.0"
  }
}
