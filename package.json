{
  "name": "college-baseball-tracker",
  "version": "1.0.0",
  "type": "module",
  "description": "Mobile-first college baseball live tracker with full box scores",
  "scripts": {
    "build:games": "pnpm --filter @bsi/phaser-bbp-web build && node scripts/copy-bbp-game.mjs",
    "build:web": "pnpm --filter @bsi/web build",
    "build": "pnpm run build:games && pnpm run build:web",
    "dev:game": "pnpm --filter @bsi/phaser-bbp-web dev",
    "lint:types": "pnpm --filter @bsi/web exec tsc --noEmit",
    "ci:check-ip": "node scripts/check-blocklist.mjs"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.714.0",
    "@sentry/node": "^10.20.0",
    "lucide-react": "^0.546.0",
    "luxon": "^3.4.4",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251014.0",
    "@lhci/cli": "^0.13.0",
    "@prisma/client": "^6.18.0",
    "@types/luxon": "^3.4.2",
    "@types/node": "^24.9.1",
    "@types/pg": "^8.10.9",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^4.7.0",
    "next": "^16.0.1",
    "prisma": "^6.18.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.11",
    "vitest": "^4.0.1",
    "wrangler": "^3.22.0"
  },
  "packageManager": "pnpm@9.12.3"
}
