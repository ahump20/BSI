{
  "name": "BSI - Blaze Sports Intelligence Development",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",

  "customizations": {
    "vscode": {
      "extensions": [
        // Python Extensions
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "ms-python.flake8",
        "ms-python.isort",
        "ms-toolsai.jupyter",

        // JavaScript/TypeScript
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "formulahendry.auto-rename-tag",

        // Cloudflare & Web
        "cloudflare.cloudflare-workers-vscode",
        "ritwickdey.liveserver",
        "christian-kohler.npm-intellisense",

        // Docker & DevOps
        "ms-azuretools.vscode-docker",
        "ms-vscode-remote.remote-containers",
        "hashicorp.terraform",

        // Data & Analytics
        "ms-toolsai.vscode-jupyter-cell-tags",
        "GrapeCity.gc-excelviewer",
        "RandomFractalsInc.vscode-data-table",

        // Git & Collaboration
        "eamodio.gitlens",
        "donjayamanne.githistory",
        "GitHub.copilot",
        "GitHub.copilot-chat",

        // Code Quality
        "SonarSource.sonarlint-vscode",
        "streetsidesoftware.code-spell-checker",
        "wayou.vscode-todo-highlight",

        // Productivity
        "alefragnani.project-manager",
        "gruntfuggly.todo-tree",
        "aaron-bond.better-comments",
        "naumovs.color-highlight"
      ],

      "settings": {
        // Python Settings
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.flake8Enabled": true,
        "python.formatting.provider": "black",
        "python.formatting.blackArgs": ["--line-length", "100"],
        "python.testing.pytestEnabled": true,
        "[python]": {
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.organizeImports": true
          }
        },

        // JavaScript/TypeScript Settings
        "eslint.enable": true,
        "eslint.autoFixOnSave": true,
        "prettier.enable": true,
        "[javascript]": {
          "editor.formatOnSave": true,
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[html]": {
          "editor.formatOnSave": true,
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[css]": {
          "editor.formatOnSave": true,
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },

        // Editor Settings
        "editor.fontSize": 14,
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.wordWrap": "on",
        "editor.minimap.enabled": true,
        "editor.bracketPairColorization.enabled": true,
        "editor.suggestSelection": "first",
        "editor.snippetSuggestions": "top",

        // Terminal Settings
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.fontSize": 13,
        "terminal.integrated.env.linux": {
          "PYTHONPATH": "/workspace"
        },

        // File Settings
        "files.autoSave": "afterDelay",
        "files.autoSaveDelay": 1000,
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "files.exclude": {
          "**/__pycache__": true,
          "**/*.pyc": true,
          "**/.DS_Store": true,
          "**/node_modules": true,
          "**/.git": true
        },

        // Git Settings
        "git.autofetch": true,
        "git.confirmSync": false,
        "git.enableSmartCommit": true,

        // Live Server Settings
        "liveServer.settings.port": 8080,
        "liveServer.settings.root": "/workspace",
        "liveServer.settings.CustomBrowser": "chrome",

        // Cloudflare Settings
        "cloudflare-workers.accountId": "a12cb329d84130460eed99b816e4d0d3",
        "cloudflare-workers.email": "austin@blazesportsintel.com"
      }
    }
  },

  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true,
      "upgradePackages": true,
      "username": "vscode",
      "userUid": "1000",
      "userGid": "1000"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "ppa": true,
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "installDirectlyFromGitHubRelease": true,
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "nodeGypDependencies": true,
      "version": "20",
      "nvmVersion": "latest"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "installTools": true,
      "version": "3.11"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": true,
      "dockerDashComposeVersion": "v2"
    },
    "ghcr.io/devcontainers-contrib/features/poetry:2": {},
    "ghcr.io/devcontainers-contrib/features/pre-commit:2": {},
    "ghcr.io/devcontainers-contrib/features/wrangler:1": {}
  },

  "forwardPorts": [
    8000,  // Python HTTP Server
    8080,  // Live Server
    8787,  // Wrangler Dev Server
    6379,  // Redis
    5432,  // PostgreSQL
    9090,  // Prometheus
    3000   // Grafana
  ],

  "postCreateCommand": "make setup",
  "postStartCommand": "make dev",

  "remoteUser": "vscode",

  "mounts": [
    "source=${localWorkspaceFolder}/.env,target=/workspace/.env,type=bind,consistency=cached",
    "source=bsi-node-modules,target=/workspace/node_modules,type=volume",
    "source=bsi-python-cache,target=/home/vscode/.cache,type=volume"
  ],

  "runArgs": [
    "--init",
    "--privileged",
    "--network=host",
    "--cap-add=SYS_PTRACE",
    "--security-opt=seccomp=unconfined"
  ],

  "containerEnv": {
    "DISPLAY": ":0",
    "TZ": "America/Chicago",
    "PYTHONUNBUFFERED": "1",
    "NODE_ENV": "development",
    "CLOUDFLARE_ACCOUNT_ID": "a12cb329d84130460eed99b816e4d0d3"
  },

  "initializeCommand": "docker network create bsi-network 2>/dev/null || true",

  "shutdownAction": "stopCompose",

  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb",
    "storage": "32gb"
  }
}