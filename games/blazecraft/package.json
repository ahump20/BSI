{
  "name": "blazecraft",
  "version": "0.1.0",
  "type": "module",
  "description": "Blazecraft - RTS Agent Visualization & Analysis Platform",
  "author": "Blaze Sports Intel",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "dev": "vite --port 5175",
    "dev:functions": "wrangler pages dev dist --port 8790 --live-reload",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:functions\"",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "deploy": "npm run build && wrangler pages deploy dist --project-name blazecraft",
    "db:migrate": "wrangler d1 execute blazecraft-db --local --file=schema.sql",
    "db:migrate:production": "wrangler d1 execute blazecraft-db --file=schema.sql",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx",
    "assets:generate": "blender --background --python scripts/blender_night_elf_generator.py",
    "assets:upload": "wrangler r2 object put blazecraft-assets/assets/world/v2/ --file ./assets/world/v2/**/*.glb"
  },
  "dependencies": {
    "pixi.js": "^8.6.6",
    "three": "^0.170.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/node": "^22.10.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/three": "^0.170.0",
    "concurrently": "^9.1.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "typescript": "^5.6.3",
    "vite": "^7.2.4",
    "wrangler": "^4.51.0"
  },
  "engines": {
    "node": ">=18"
  }
}
