{
  "name": "blaze-blitz-football",
  "version": "1.0.0",
  "type": "module",
  "description": "Blaze Blitz Football - A 60-90 second arcade football microgame for BlazeSportsIntel.com",
  "author": "Blaze Sports Intel",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "dev": "vite --port 5175",
    "dev:functions": "wrangler pages dev dist --port 8790 --live-reload",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:functions\"",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "deploy": "npm run build && wrangler pages deploy dist --project-name blaze-blitz-football",
    "db:migrate": "wrangler d1 execute bsi-game-db --local --file=schema.sql",
    "db:migrate:production": "wrangler d1 execute bsi-game-db --file=schema.sql",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx"
  },
  "dependencies": {
    "@babylonjs/core": "^7.54.3",
    "@babylonjs/gui": "^7.54.3",
    "@babylonjs/havok": "^1.3.10",
    "@babylonjs/loaders": "^7.54.3",
    "@babylonjs/materials": "^7.54.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/node": "^22.10.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "concurrently": "^9.1.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "wrangler": "^3.87.0"
  },
  "engines": {
    "node": ">=18"
  }
}
