# REAL Environment Configuration
# Copy to .env and update with your values

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=blazesportsintel
DB_USER=postgres
DB_PASSWORD=postgres

# API Server
PORT=3000

# Sports API Keys (optional - many work without keys)
